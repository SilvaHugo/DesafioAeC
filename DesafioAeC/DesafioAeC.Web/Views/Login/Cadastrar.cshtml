@model DesafioAeC.Web.ViewModels.CadastrarUsuarioViewModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastrar";
}

<form asp-controller="Login" asp-action="Cadastrar" method="post">
    <div class="mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="ConfirmarSenha" class="form-label">Confirmar Senha</label>
        <input type="password" asp-for="ConfirmarSenha" class="form-control" id="confirmarSenha">
        <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>